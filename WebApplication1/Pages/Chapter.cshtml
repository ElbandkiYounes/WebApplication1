@page "{chapterId:int}"
@model WebApplication1.Pages.ChapterModel

<div class="chapter-content">
    <h2>@Model.ChapterTitle</h2>

    <div class="video-container">
        <video controls>
            <source src="@Model.VideoUrl" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
    </div>
    
    <div class="chapter-description">
        <p>@Model.ChapterDescription</p>
    </div>

    <div class="navigation">
        @if (Model.PreviousChapterId != null)
        {
            <a href="/Chapter/@Model.PreviousChapterId" class="btn btn-secondary">
                <span class="material-icons">chevron_left</span>
                Previous
            </a>
        }
        else
        {
            <div style="min-width: 200px;"></div>
        }
        
        @if (Model.NextChapterId != null)
        {
            <a href="/Chapter/@Model.NextChapterId" class="btn btn-primary">
                Next
                <span class="material-icons">chevron_right</span>
            </a>
        }
        else
        {
            <a href="/Quiz" class="btn btn-quiz">
                Take Final Quiz
                <span class="material-icons">emoji_events</span>
            </a>
        }
    </div>
</div>

